@using Microsoft.AspNetCore.Identity
@using Project_2_Common.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}


@{
    ViewData["Title"] = "Home Page";
}

<meta name="viewport" content="height=device-height, initial-scale=1.0">

@section Styles{
<style>
    .myNav {
        display: none;
    }

</style>
    }


<div class="home-content container text-center">
    <div class="row">
        <div class="col-md-12">
            
            <div class="padding-top-50">
                <script src="//cdnjs.cloudflare.com/ajax/libs/gsap/1.18.0/utils/Draggable.min.js"></script>
                <img class="img logo-main" src="~/images/local-ea-Logo-final.png" />
                @Html.Partial("_AnimationView")
            </div>
            <div class="about-btn">
                <div class="about-title">
                    <a href="#about" data-toggle="collapse" class="btn btn-outline-dark about-btn-actual"><h5 class="about-header">ABOUT</h5></a>
                </div>
                <div id="about" class="collapse padding-bottom-50">
                    <div class="container">
                        <div class="row">
                            @*<div class="col-md-1"></div>*@
                            <div class="col-md-12">
                                <div class="about-content text-center">
                                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                        <ol class="carousel-indicators">
                                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                        </ol>
                                       
                                        <div class="carousel-inner carousel-sizing">
                                            <div class="carousel-item active">
                                                <img class="d-block w-100" src="https://images.pexels.com/photos/297755/pexels-photo-297755.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260" alt="First slide">

                                                <div class="home-overlay">

                                                </div>
                                                <div class="container">
                                                    <div class="carousel-caption about-caption">
                                                        <h1>  The Mission</h1>
                                                        <p>Our mission is to give locals a voice to share their experiences in the place they spend their life, promote their choices and ideas while encouraging a local living for visitors in their area. All these, within a free forum for sharing open and honest opinions in a friendly and playful manner.</p>                                                </p>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="https://images.pexels.com/photos/408503/pexels-photo-408503.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260" alt="Second slide">
                                                <div class="home-overlay">

                                                </div>

                                                <div class="container">
                                                    <div class="carousel-caption about-caption">
                                                        <h1>The Vision</h1>
                                                        <p>
                                                            We are committed in providing a trusted and friendly resource for travelers and visitors with valued advice and insights from the Local-ea community, based on the wisdom of the “Locale”. We know that our users approach Local-ea with intimacy, and make a friendly decision based on their personal opinions and experience.
                                                            As to what Local-ea’ s team vision for the future is, and to where we might be heading engage with us and you will be surprised...
                                                        </p>                                               
                                                    </div>
                                                </div>
                                            </div> 
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="https://images.pexels.com/photos/1078850/pexels-photo-1078850.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260" alt="Second slide">
                                                <div class="home-overlay">

                                                </div>

                                                <div class="container">
                                                    <div class="carousel-caption about-caption">
                                                        <h1>The Team </h1>
                                                        <p>Mike Vasiliki Mike Vasiliki
                                                           </p>                                             
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="https://images.pexels.com/photos/269850/pexels-photo-269850.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260" alt="Third slide">
                                                <div class="home-overlay">
                                                </div>
                                                <div class="container">
                                                    <div class="carousel-caption about-caption">
                                                        <h1>How it works:</h1>
                                                        <p>Login</p>
                                                        <p>Select a locale</p>
                                                        <p>Explore the city</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>

                                        </div>

                                </div>
                            </div>
                            @*<div class="col-md-1"></div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@if (SignInManager.IsSignedIn(User))
{
    <div class="home-right-button">
        <a class="btn btn-large btn-outline-dark home-button-viz-right about-btn-actual  font-weight-bold" href="Manage/Index">PROFILE</a>

    </div>
}
else
{
    <div class="home-right-button">
        <a class="btn btn-large btn-outline-dark home-button-viz-right about-btn-actual font-weight-bold" href="Account/Login">LOGIN</a>
    </div>
}

<div class="home-left-button">
    <a class="btn btn-large btn-outline-dark home-button-viz-left about-btn-actual font-weight-bold" href="MapPage/Index">MAP</a>
</div>
    </div>
@section Scripts {
    <script>
        $('#about').on('shown.bs.collapse', function () {

            $('html, body').animate({
                scrollTop: $("#about").offset().top
            }, 1000);

        });

        $(document).ready(function () { })
        $('.carousel').carousel({ interval: 3500 });

    </script>
}
